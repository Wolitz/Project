<GridLayoutExample@GridLayout>:
    rows:2
    
    Button:
        text : "A"
        size_hint: None,1
        width:"50dp"
    BoxLayoutExample:
    Button:
        text : "C"
    Button:
        text : "D"
        size_hint: None,1
        width:"50dp"
    Button:
        text : "E"
    Button:
        text : "F"

<AnchorLayoutExample>:
    anchor_x :"center"
    anchor_y : "top"
    BoxLayout:
        size_hint: 0.2,0.2
        Button:
            text : "A"
        Button:
            text : "B"
           
   

<BoxLayoutExample>:
    orientation : "horizontal"

    Button:
        text:"A"
        size_hint: 0.5, 0.5
        pos_hint: {"center_y":0.5}
    BoxLayout:
        orientation : "vertical"
        spacing : "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Label:
        text:"C"


